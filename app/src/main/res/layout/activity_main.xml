<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:onClick="sendMessage"
            android:text="@string/hello_world"
            android:textAllCaps="true"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_spotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="47dp"
            android:width="200dp"
            android:backgroundTint="#ff03a8f3"
            android:onClick="sendMessage"
            android:text="@string/media_streamer"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_spotify"
            android:layout_alignLeft="@+id/btn_spotify"
            android:layout_alignRight="@+id/btn_spotify"
            android:layout_alignStart="@+id/btn_spotify"
            android:layout_below="@+id/btn_spotify"
            android:backgroundTint="#ff03a8f3"
            android:onClick="sendMessage"
            android:text="@string/scores_app"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_scores"
            android:layout_alignLeft="@+id/btn_scores"
            android:layout_alignRight="@+id/btn_scores"
            android:layout_alignStart="@+id/btn_scores"
            android:layout_below="@+id/btn_scores"
            android:backgroundTint="#ff03a8f3"
            android:onClick="sendMessage"
            android:text="@string/library_app"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_build_bigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_library"
            android:layout_alignLeft="@+id/btn_library"
            android:layout_alignRight="@+id/btn_library"
            android:layout_alignStart="@+id/btn_library"
            android:layout_below="@+id/btn_library"
            android:backgroundTint="#ff03a8f3"
            android:onClick="sendMessage"
            android:text="@string/build_it_bigger"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_reader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_build_bigger"
            android:layout_alignLeft="@+id/btn_library"
            android:layout_alignRight="@+id/btn_build_bigger"
            android:layout_alignStart="@+id/btn_library"
            android:layout_below="@+id/btn_build_bigger"
            android:backgroundTint="#ff03a8f3"
            android:onClick="sendMessage"
            android:text="@string/xyz_reader"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_capstone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_reader"
            android:layout_alignLeft="@+id/btn_spotify"
            android:layout_alignRight="@+id/btn_reader"
            android:layout_alignStart="@+id/btn_spotify"
            android:layout_below="@+id/btn_reader"
            android:backgroundTint="#ff0287d0"
            android:onClick="sendMessage"
            android:text="@string/my_app"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</ScrollView>

